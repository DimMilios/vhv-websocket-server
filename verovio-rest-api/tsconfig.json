{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "Node",
    "typeRoots": ["./global.d.ts"],
    "types": [
      "node",
      "mocha"
    ]
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "global.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}